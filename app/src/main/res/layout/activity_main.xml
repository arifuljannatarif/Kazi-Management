<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swiperefresh"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <Button
          android:id="@+id/btn_addnew"
          android:layout_alignParentRight="true"
          android:layout_margin="6dp"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:minHeight="0dp"
          android:minWidth="0dp"
          android:background="@drawable/button_background_green"
          android:text="@string/add_new_txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
          <Spinner
              android:layout_alignTop="@id/btn_addnew"
              android:elevation="@dimen/txt2"
              android:paddingRight="2dp"
              android:paddingTop="1dp"
              android:paddingBottom="1dp"
              android:dropDownSelector="@color/Red"
              android:id="@+id/spinner"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginEnd="5dp"
              android:layout_marginLeft="5dp"
              android:gravity="center_horizontal"
              android:entries="@array/myoptions"
              android:layout_marginRight="5dp" />
      <androidx.recyclerview.widget.RecyclerView
          android:layout_below="@id/btn_addnew"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          android:id="@+id/recyclerview_shortlist"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
      <ProgressBar
          android:visibility="gone"
          android:id="@+id/progressbar"
          android:layout_marginTop="5dp"
          android:layout_alignTop="@id/recyclerview_shortlist"
          android:layout_centerHorizontal="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
  </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>