<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".Add_new_details">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:visibility="gone"
                android:id="@+id/new_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:background="@drawable/button_background_danger"
                android:maxWidth="80dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:paddingRight="8dp"
                android:paddingBottom="5dp"
                android:text="deete" />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="end|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:visibility="gone"
                    android:id="@+id/new_btn_cancel_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="6dp"
                    android:background="@drawable/button_background_green"
                    android:maxWidth="80dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Cancel" />
                <Button
                    android:elevation="6dp"
                    android:id="@+id/new_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="6dp"
                    android:background="@drawable/button_background_green"
                    android:maxWidth="80dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Edit" />
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="6dp"
            android:id="@+id/card1"
            android:elevation="2dp"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_horizontal"
                    android:text="Details "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:padding="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t1"
                        android:layout_centerVertical="true"
                        android:text="Date"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/t1"
                        android:ellipsize="start"
                        android:id="@+id/new_date"
                        android:editable="false"
                        android:inputType="none"
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:paddingLeft="8dp"
                        android:hint="Click to change"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t2"
                        android:layout_centerVertical="true"
                        android:text="Serial No"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/t2"
                        android:id="@+id/new_serial"
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/t3"
                        android:layout_centerVertical="true"
                        android:text="Book No"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/t3"
                        android:id="@+id/new_bookno"
                        android:layout_marginBottom="6dp"
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Groom"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_groom"
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Bride"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_bride"
                        android:singleLine="true"
                        android:paddingTop="3dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/edittextbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Mobile"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextbg"
                        android:inputType="phone"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Address"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edittextbg"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Reference"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_reference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:background="@drawable/edittextbg"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp"
                        android:singleLine="true" />
                </LinearLayout>
                <LinearLayout
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:text="Notes (if)"
                        android:gravity="end"
                        android:layout_width="@dimen/textwidth"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textIsSelectable="true"
                        android:id="@+id/new_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:autoLink="all"
                        android:background="@drawable/edittextbg"
                        android:paddingLeft="8dp"
                        android:paddingTop="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:maxWidth="80dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:id="@+id/new_btn_cancel"
                        android:layout_margin="6dp"
                        android:padding="8dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:background="@drawable/button_background_red"
                        android:text="Cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:maxWidth="80dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:id="@+id/new_btn_add"
                        android:layout_margin="6dp"
                        android:padding="8dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:background="@drawable/button_background_green"
                        android:text="Add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>