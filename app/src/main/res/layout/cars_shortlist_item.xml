<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:id="@+id/mainlayout"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:padding="6dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_marginRight="6dp"
               android:gravity="center"
               android:layout_alignBottom="@id/status"
               android:layout_alignTop="@id/status"
               android:id="@+id/m_date"
               android:text="21/12/2019"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_toLeftOf="@id/status"
               android:layout_marginRight="8dp"
               android:gravity="center"
               android:layout_alignBottom="@id/m_date"
               android:layout_alignTop="@id/m_date"
               android:id="@+id/serial"
               android:text="Ab-6654"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:textColor="@color/orange"
               android:textSize="@dimen/txt3"
               android:layout_below="@id/m_date"
               android:id="@+id/groom"
               android:text="Kazi Ahmed al masud"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/status"
               android:textSize="@dimen/txt4"
               android:text="@string/clock"
               android:layout_marginTop="-4dp"
               android:layout_marginRight="4dp"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:id="@+id/vs"
               android:padding="2dp"
               android:layout_marginRight="8dp"
               android:layout_toLeftOf="@id/bride"
               android:layout_alignTop="@id/bride"
               android:text="with"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_marginTop="2dp"
               android:textColor="@color/orange_2"
               android:textSize="@dimen/txt3"
               android:layout_alignParentRight="true"
               android:layout_below="@id/groom"
               android:text="Mrs Samia Sultana"
               android:id="@+id/bride"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>
       <View
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>
   </LinearLayout>

</androidx.cardview.widget.CardView>